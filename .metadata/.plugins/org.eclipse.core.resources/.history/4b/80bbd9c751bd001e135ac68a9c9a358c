package streams;

import java.util.Arrays;
import java.util.List;
import java.util.function.Consumer;
import java.util.function.Function;
import java.util.function.UnaryOperator;


public class DesafioMap {
	
	public static String inversor (String n) {
		StringBuilder nova = new StringBuilder(n);
		return nova.reverse().toString();
	}
	
	public static void main(String[] args) {
		
		 Consumer<String> imprimir = System.out::print;
		 List<Integer> nums = Arrays.asList(1, 2, 3, 4, 5, 6, 7, 8, 9);
		 
		 Function<Integer, String> getBinario = n -> Integer.toBinaryString(n);
		 
		 UnaryOperator<String> inverterString = n -> inversor(n);
		 
		 Function<String, Integer> getInteiro= n -> Integer.parseInt(n, 2);
		 
		 nums.stream().map(getBinario)
		 .map(inverterString)
		 .map(getInteiro)
		 .forEach(imprimir);
 
		 
	
	}
	
	

}
