package lambdas;

import java.util.function.BinaryOperator;

public class Desafio {
	
	public static void main(String[] args) {
		
		Produto p1 = new Produto("iPad", 3235.0, 0.13);
	
		BinaryOperator<Double> precoComDesconto = (preco, desconto) -> (1 - desconto) * preco;
		
		System.out.println(precoComDesconto.apply(p1.preco, p1.desconto));
	
	
	
	
	
	}
}









//a partir do produto calcular o preco real (com desconto)
//Imposto >= 2500 (8,5%) / < 2500 (isento)
//Frete >= 3000 (100) / <3000 (50)
