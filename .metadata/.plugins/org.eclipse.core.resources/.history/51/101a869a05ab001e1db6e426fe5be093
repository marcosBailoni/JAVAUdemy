package oo.encapsulamento;

public class Pessoa {
	
	private String nome; 
	private int idade;
	
	Pessoa(String nome, int idade){
		this.nome = nome;
		this.idade = idade;
	}
	
	public String getNome() {
		return nome;
	}
	
	public int getIdade() {
		return idade;
	}
	
	public void setIdade(int novaIdade) {
		novadaIdade = Math.abs(novaIdade);
		if (novaIdade >= 0) {
			this.idade = novaIdade;
		}
	}
}
