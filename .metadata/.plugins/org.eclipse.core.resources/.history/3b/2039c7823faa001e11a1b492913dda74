package oo.heranca;

public class Jogo {

	public static void main(String[] args) {
		
		Jogador j1 = new Heroi();
		Jogador j2 = new Monstro();
		
		j1.x = 10;
		j1.y = 10;
		
		j2.x = 11;
		j2.y = 10;
		
		System.out.println("Vida j1: " + j1.vida);
		System.out.println("Vida j2: " + j2.vida);
		
		j1.atacar(j2); // j1 atk j2
		j2.atacar(j1); // j2 atk j1
		
		System.out.println("Vida j1: " + j1.vida); 
		System.out.println("Vida j2: " + j2.vida);


	}
}
