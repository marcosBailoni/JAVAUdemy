package oo.heranca;

public class Jogo {

	public static void main(String[] args) {
		
		Jogador monstro = new Heroi(); // heroi é subclasse de Jogador
		Jogador j2 = new Monstro(); // monstro também;
		
		monstro.x = 10;
		monstro.y = 10;
		
		j2.x = 11;
		j2.y = 10;
		
		System.out.println("Vida j1: " + monstro.vida);
		System.out.println("Vida j2: " + j2.vida);
		
		monstro.atacar(j2); // j1 atk j2
		j2.atacar(monstro); // j2 atk j1
		
		System.out.println("Vida j1: " + monstro.vida); 
		System.out.println("Vida j2: " + j2.vida);


	}
}
