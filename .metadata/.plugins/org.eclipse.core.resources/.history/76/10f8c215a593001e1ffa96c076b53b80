package estruturasDeControle;

import java.util.Scanner;

//7. Criar um programa que enquanto estiver recebendo números positivos, imprime no console a soma dos números inseridos, 
//caso receba um número negativo, encerre o programa. Tente utilizar a estrutura do while.


public class DesafioNumerosPositivos {
	
	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Digite um numero positivo para somar ou um negativo pra encerrar:  ");
		int numero = entrada.nextInt();
		System.out.println("total = " + numero);
		
		while (numero > 0) {
			System.out.printf("Digite outro número positivo para somar ou negativo para encerrar: ");
			numero = entrada.nextInt();
			numero += numero;
			System.out.println("A soma ficou" + numero);
		}
		
		if (numero < 0) {
			System.out.println("Programa encerrado");
		}
		
		entrada.close();
	}
}
