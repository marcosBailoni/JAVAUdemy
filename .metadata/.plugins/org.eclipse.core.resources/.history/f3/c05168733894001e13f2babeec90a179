package estruturasDeControle;

import java.util.Scanner;

//7. Criar um programa que enquanto estiver recebendo números positivos, imprime no console a soma dos números inseridos, 
//caso receba um número negativo, encerre o programa. Tente utilizar a estrutura do while.


public class DesafioNumerosPositivos {
	
	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);

			System.out.print("Digite um número positivo para somar ou um negativo para fechar: ");
			int numero = entrada.nextInt();
			int total = numero;
			
			while (numero > 0) {
				System.out.print("Digite outro número para somar ou negativo para fechar");
				numero = entrada.nextInt();
				total += numero;
				System.out.println("total = " + total);
				 
			}
			
			System.out.println("total = " + total + "\nfechando programa");
		entrada.close();
	}
}
