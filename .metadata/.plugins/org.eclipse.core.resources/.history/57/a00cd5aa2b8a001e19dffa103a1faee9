package fundamentos;

public class NotacaoPonto {

	public static void main(String[] args) {
		
		String s = "Bom dia X";
		System.out.println(s);
		
		s = s.toUpperCase();
		System.out.println(s);
		
		s = s.concat("!!!");
		System.out.println(s);
		
		s = s.replace("X", "doido");
		System.out.println(s);
	}
}
